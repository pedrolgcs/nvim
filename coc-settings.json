{
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.snippetIndicator": " ðŸ”¥",
  "suggest.autoTrigger": "always",

  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "json",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "coc.preferences.formatOnType": true,
  "coc.preferences.colorSupport": true,
  "tsserver.formatOnType": true,
  "tsserver.enableJavascript": true,

  "codeLens.enable": true,

  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "eslint.autoFixOnSave": true,

  "diagnostic.errorSign": "â€¢",
  "diagnostic.warningSign": "â€¢",
  "diagnostic.infoSign": "â€¢",

  "prettier.endOfLine": "lf",
  "prettier.singleQuote": true,
  "prettier.disableSuccessMessage": true,

  "cSpellExt.enableDictionaries": ["portuguese-brazilian"],
  "cSpell.language": "en, pt, pt_BR",
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "node_modules",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    "**.vim"
  ],
  "cSpell.words": [],
  "cSpell.ignoreRegExpList": [
    "0x[0-9a-f]+",
    "/from\\s+(['\"]).*\\1/",
    "/\\(.*\\.(jpg|jpeg|png|md|gif|JPG|JPEG|PNG|MD|GIF)\\)/g",
    "/((http|https|ftp|git)\\S*)/g"
  ],
  "cSpell.userWords": ["smtp"]
}
